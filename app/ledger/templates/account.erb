<div class="col-sm-9">
  <h4><%=account_name%> Transactions</h4>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Payee</th>
          <th>Amount</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.each do |t| %><tr>
            <td><%=t.date%></td>
            <td><%=t.payee%></td>
            <td><%=t.value%></td>
            <td><%=t.running_balance%></td>
        </tr><% end %>
  </tbody>
    </table>
  </div>
</div>
